modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = [
  "cairo",
  "ffmpeg-full",
  "freetype",
  "ghostscript",
  "glibcLocales",
  "gobject-introspection",
  "gtk3",
  "pkg-config",
  "qhull",
  "tcl",
  "tk",
]

[workflows]
runButton = "Project"

# --- Run Project (wrapper) ---
[[workflows.workflow]]
name = "Run Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Vite App"

# --- Project (frontend + backend) ---
[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "backend"

# --- Frontend workflow ---
[[workflows.workflow]]
name = "frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

# --- Backend workflow ---
[[workflows.workflow]]
name = "backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python run.py"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3002

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 36029
externalPort = 5173

[[ports]]
localPort = 36735

[[ports]]
localPort = 39211
externalPort = 5000

[[ports]]
localPort = 40603
externalPort = 3003

[[ports]]
localPort = 43359
externalPort = 4200

[[ports]]
localPort = 45559
externalPort = 3001

[[ports]]
localPort = 46425
externalPort = 4200

[[ports]]
localPort = 46551
externalPort = 6000

[deployment]
run = [
  "bash",
  "-c",
  "gunicorn --reuse-port -w 4 -b 0.0.0.0:8000 app:app & npm run dev",
]
deploymentTarget = "cloudrun"

[agent]
expertMode = true
